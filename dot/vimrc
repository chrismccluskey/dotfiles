" Install plug (run init.sh to install vim-plug if these commands fail
call plug#begin('~/.vim/plugged')

" Install vim plugins via plug
Plug 'altercation/vim-colors-solarized'
Plug 'airblade/vim-gitgutter'
Plug 'bling/vim-airline'
Plug 'edkolev/promptline.vim'
Plug 'fatih/vim-go'
Plug 'junegunn/vim-easy-align'
Plug 'junegunn/vim-github-dashboard'
Plug 'junegunn/fzf', { 'dir': '~/.fzf', 'do': 'yes \| ./install' }
Plug 'kchmck/vim-coffee-script'
Plug 'nathanaelkane/vim-indent-guides'
Plug 'vimoutliner/vimoutliner'
Plug 'pangloss/vim-javascript'
Plug 'SirVer/ultisnips' | Plug 'honza/vim-snippets'
Plug 'scrooloose/nerdtree', { 'on': 'NERDTreeToggle' }
Plug 'scrooloose/syntastic'
Plug 'tpope/vim-fugitive'
Plug 'tpope/vim-markdown'
Plug 'wakatime/vim-wakatime'
Plug 'godlygeek/tabular'

" Finish installation of plugins
call plug#end()

" Set look and feel
filetype plugin indent on
syntax on
set background=dark
set number
colorscheme solarized
"let g:solarized_termcolors=256
let laststatus=2
let g:airline_powerline_fonts=1
set autochdir

" Save and load views automatically
autocmd BufWinLeave *.* mkview
autocmd BufWinEnter *.* silent loadview

" Hide tool/menu bars in GVim
set guioptions-=m  " Remove menu bar
set guioptions-=T  " Remove tool bar
set guioptions-=r  " Remove right-hand scroll bar
set guioptions-=L  " Remove left-hand scroll bar

" Configure backup/swap/undo directories
set backupdir=~/.vim/.backup//
set directory=~/.vim/.swp//
set undodir=~/.vim/.undo//

" Text hygene
set nobomb
set list listchars=tab:→\ ,trail:·,extends:#,nbsp:·,
set encoding=utf-8
set nowrap
set shiftwidth=2
set expandtab
set tabstop=2
set softtabstop=2
